<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="AccountDesc">
	
		<resultMap id="result" type="AccountDesc">
	    <result property="descId" column="desc_id"/>
	    <result property="emailId" column="email_id"/>
	    <result property="friendId" column="friend_id"/>
	    <result property="groupId" column="group_id"/>
	    <result property="documentId" column="document_id"/>
	    <result property="forumId" column="forum_id"/>
	    <result property="selfFlag" column="self_flag"/>
	    <result property="friendsFlag" column="friends_flag"/>
    </resultMap>
	
    <select id="getByIds" parameterType="AccountDesc" resultMap="result">
    	SELECT * FROM ACCOUNTDESC WHERE  email_id=#{emailId} and friend_id= #{friendId}
    </select>
    
    <select id="getById" parameterType="Account" resultMap="result">
    	SELECT * FROM MEMBERS WHERE profile_id = #{id}
  	</select>
  
    
    <delete id="deleteById" parameterType="int">
    	DELETE from MEMBERS WHERE profile_id = #{id};
    </delete>

	    <insert id="insertaccout" parameterType="AccountDesc">
	INSERT INTO ACCOUNTS (  email_id,        
	passwords,       
	account_flag ) 
	VALUES (#{emailId},#{passWord},
	#{accountFlag});
	</insert>
	

	<update id="update" parameterType="Member">
	  	UPDATE MEMBERS
		SET
			email_id = #{emailId},
			first_name_s = #{memberFirstName},
			mobile_no = #{memberPhoneNumber}
		WHERE profile_id = #{emailId};
  </update>

</mapper>